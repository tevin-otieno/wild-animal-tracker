{{#partial "content"}}
    <div class="row">
        <button type="button" class="btn col m-3 btn-outline-dark"
                onClick="window.location = '/create/animal';">Add Animal</button>
        <button type="button" class="btn col m-3 btn-outline-dark"
                onClick="window.location = '/create/location';">Add Location</button>
        <button type="button" class="btn col m-3 btn-outline-dark"
                onClick="window.location = '/create/ranger';">Add Ranger</button>
    </div>
    <div class="form">
        <form action="/create/ranger/new" method="post">
            <h1>Create Ranger</h1>
            <hr>
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control form-control-lg" id="name" name="name" placeholder="Input Name..." required>
            </div>
            <div class="form-group">
                <label for="badge">Badge Number</label>
                <input type="text" class="form-control form-control-lg" id="badge" name="badge" placeholder="Input Badge Number..."required>
            </div>
            <div class="form-group">
                <label for="phone">Phone Number</label>
                <input type="text" class="form-control form-control-lg" id="phone" name="phone" placeholder="Input Phone Number..."
                       required>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success btn-lg"> Create </button>
            </div>
        </form>
    </div>

{{/partial}}
{{> layout.hbs}}